<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div class="col-md-2">
        </div>
        <div class="col-md-8">
            <div class="thumbnail">
                <img class="img-rounded" src="<%= cafe.image %>">
                <div class="caption-full">
                    <h4><a><%=cafe.name%></a></h4>
                    <p><%= cafe.location %></p>
                    <p><%= cafe.description %></p>
                    <% if(currentUser && cafe.author.id.equals(currentUser._id)){ %>
                        <div class="pull-right">
                            <a class="btn btn-xs btn-warning" href="/cafes/<%= cafe._id %>/edit">Edit</a>
                            <form id="delete-form" action="/cafes/<%= cafe._id %>?_method=DELETE" method="POST">
                                <button class="btn btn-xs btn-danger">Delete</button>
                            </form>
                        </div>
                    <% }%>
                    <p>
                        <em>Submitted by <%= cafe.author.username %></em>
                    </p>
                </div>
            </div>
            <div class="well">
                <div class="text-right" style="margin-bottom: 10px;">
                    <a class="btn btn-primary" href="/cafes/<%= cafe._id %>/comments/new">Add New Comment</a>
                </div>
                <% cafe.comments.forEach(function(comment){ %>
                    <div class="row">
                        <div class="col-md-12">
                            <strong><%= comment.author.username %></strong>
                            <% if(currentUser && comment.author.id.equals(currentUser._id)){ %>
                                <form id="delete-form" action="/cafes/<%=cafe._id %>/comments/<%=comment._id %>?_method=DELETE" method="POST">
                                    <input type="submit" class="btn btn-xs btn-danger pull-right" value="Delete">
                                </form>
                            <% } %>
                            <p>
                                <%= comment.text %> 
                            </p>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
        <div class="col-md-2">
        </div>
    </div>
</div>

<% include ../partials/footer %>